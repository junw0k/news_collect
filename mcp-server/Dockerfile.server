FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

RUN pip install --upgrade pip && \
    pip install --no-cache-dir \
        "fastmcp==2.13.0.2" \
        "mcp[cli]==1.19.0" \
        "requests==2.32.5" \
        "beautifulsoup4==4.14.2" \
        "python-dotenv==1.2.0" \
        "pydantic==2.12.3"

COPY . .

EXPOSE 8000

CMD ["python", "server.py"]
